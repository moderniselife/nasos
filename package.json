{
  "name": "nestos",
  "version": "0.1.0",
  "description": "NestOS - A modern, user-friendly home server operating system",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:control-panel\" \"npm run dev:system-service\"",
    "dev:control-panel": "cd packages/control-panel && npm run dev",
    "dev:system-service": "cd packages/system-service && npm run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "docker:dev": "docker-compose up",
    "docker:build": "docker-compose build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint-plugin-react": "^7.37.4",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moderniselife/nestos.git"
  },
  "keywords": [
    "nas",
    "home-server",
    "docker",
    "typescript",
    "react",
    "debian"
  ],
  "author": "Joseph Shenton",
  "license": "MIT"
}
